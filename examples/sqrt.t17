
external real(Int) -> Real
external abs(Real) -> Real

function bound(Real x, Real eps):
	case	x < eps => true
	||	x > eps/2.0 => false
	end

function sqrt(Real x):
	lim n =>
		var y := 1.0
		and eps := 2.0^real(-n) in (
			while !bound(abs(y-x/y), eps)
			do
				y := (y+x/y)/2.0;
			y
		)

do
	sqrt(2.0)
